{
  "css.validate": true,
  "scss.validate": true,
  "less.validate": true,
  "[javascript]": {
    "editor.formatOnSave": false
  },
  "prettier.disableLanguages": ["js"],
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": { "source.fixAll.eslint": true },
  "cSpell.words": ["deckit", "formik", "hygge", "scroller"],
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true
  },
  "files.eol": "\n"
}
